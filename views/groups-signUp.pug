extends layout

block content
        br
        .container.mt-5
            form(method="post", action="/groups-signup")
                fieldset
                    div.form-group
                        label(for="username") Nombre de usuario:
                        input#username.form-control(type="text", name="username", required)
                    div.form-group
                        label(for="password") Password:
                        input#password.form-control(type="password", name="password", required)
                    div.form-group
                        label(for="email") Email:
                        input#password.form-control(type="text", name="email", required)
                    div.form-group
                        label(for="municipio") Municipio de Madrid en el que reside:
                        select#municipality.form-control(name="municipality")
                            option(value="Alcalá de Henares") Alcalá de Henares
                            option(value="Alcobendas") Alcobendas
                            option(value="Alcorcón") Alcorcón
                            option(value="Aranjuez") Aranjuez
